<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvGyroscopeSensorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gyroscope Sensor: "
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvGyroscopeSensorValueText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x: 0.0, y: 0.0, z: 0.0"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@+id/tvGyroscopeSensorText"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAccelerometerSensorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accelerometer Sensor: "
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAccelerometerSensorValueText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x: 0.0, y: 0.0, z: 0.0"
        android:textSize="15sp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toEndOf="@+id/tvAccelerometerSensorText"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvMagnetometerSensorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Magnetometer Sensor: "
        android:layout_marginTop="70dp"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvMagnetometerSensorValueText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x: 0.0, y: 0.0, z: 0.0"
        android:textSize="15sp"
        android:layout_marginTop="70dp"
        app:layout_constraintStart_toEndOf="@+id/tvMagnetometerSensorText"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvLightSensorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Light Meter: "
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvLightSensorValueText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0 lux"
        android:textSize="15sp"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toEndOf="@+id/tvLightSensorText"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvGForceSensorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="G Force Meter: "
        android:layout_marginTop="130dp"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvGForceSensorValueText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x: 0.0, y: 0.0, z: 0.0"
        android:textSize="15sp"
        android:layout_marginTop="130dp"
        app:layout_constraintStart_toEndOf="@+id/tvGForceSensorText"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>